<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, id: :task_title, placeholder: "Title", class: "form-control" %>
  </div>

  <div class="form-group">
     <%= form.text_area :description, id: :task_description, placeholder: "Description", class: "form-control" %>
  </div>

  <div class='input-group date' id='task_deadline'>
    <%= form.text_field :deadline, placeholder: "Dead Line", class: "form-control" %>
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-calendar"></span>
    </span>
  </div>

  <div class="field">
    <%= form.label :private %>
    <%= form.check_box :private %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


<script type="text/javascript">
    $(function () {
        $('#task_deadline').datetimepicker({format: 'YYYY-MM-DD HH:mm:ss'});
    });
</script>