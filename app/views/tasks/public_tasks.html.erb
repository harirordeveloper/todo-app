<h3 class="text-center">Public Tasks</h3>
</br>
<% if user_signed_in? %>
  <%= button_to 'Back', tasks_path, class: "btn btn-primary", method: :get %>
<% end %>
</br >

<% if @tasks.present? %>
  <%= render partial: "task", collection: @tasks, as: :task %>
<% else %>
  <h3> Sorry ! currently there are no tasks created in system. <%= link_to 'Please create a task', new_task_path, class: "btn-link" %>.</h3>
<% end %>

